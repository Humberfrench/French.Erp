@using French.Erp.Application.DataObject;
@model SeletoresBasic
@{
    IEnumerable<SelectListItem> tipoDeClienteLista = Model.Seletor1 as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> tipoDePessoaLista = Model.Seletor2 as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> estadoLista = Model.Seletor3 as IEnumerable<SelectListItem>;

}


<div class="modal fade" tabindex="-1" id="modalEdicao">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#dadosPrincipais" role="tab" aria-controls="home" aria-selected="true">Dados Principais</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#endereco" role="tab" aria-controls="profile" aria-selected="false">Endereço</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="dadosPrincipais" role="tabpanel" aria-labelledby="dadosPrincipais-tab">
                        <div class="row">
                            <div class="col-12 col-sm-12 col-xl-5 col-md-5 col-lg-5">
                                <label id="labelDescricao" for="Nome" class="col-form-label">Nome</label>
                                <input type="hidden" id="ClienteId" name="ClienteId" value="" />
                                <input type="text" id="Nome" name="Nome" value="" class="form-control" placeholder="Nome" />
                            </div>
                            <div class="col-12 col-sm-12 col-xl-7 col-md-7 col-lg-7">
                                <label id="labelRazaoSocial" for="RazaoSocial" class="col-form-label">Razão Social</label>
                                <input type="text" id="RazaoSocial" name="RazaoSocial" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelDocumento" for="Documento" class="col-form-label">Documento</label>
                                <input type="text" id="Documento" name="Documento" value="" class="form-control" placeholder="Documento" />
                            </div>
                            <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelInscricaoEstadual" for="InscricaoEstadual" class="col-form-label">Insc.Estadual</label>
                                <input type="text" id="InscricaoEstadual" name="InscricaoEstadual" value="" class="form-control" placeholder="Insc.Estadual" />
                            </div>
                            <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelTipoDePessoa" for="TipoDePessoaId" class="col-form-label">Tipo De Pessoa</label>
                                <select id="TipoDePessoaId" name="TipoDePessoaId" asp-items="tipoDePessoaLista" class="selectpicker show-tick form-control" data-width="100%" data-header="Escolha" data-done-button="true" data-live-search="false">
                                    <option value="0">Selecione</option>
                                </select>
                            </div>
                            <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelTipoDeCliente" for="TipoDeClienteId" class="col-form-label">Tipo de Cliente</label>
                                <select id="TipoDeClienteId" name="TipoDeClienteId" asp-items="tipoDeClienteLista" class="selectpicker show-tick form-control" data-width="100%" data-header="Escolha" data-done-button="true" data-live-search="false">
                                    <option value="0">Selecione</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelCadastroMunicipal" for="CadastroMunicipal" class="col-form-label">Cad.Municipal</label>
                                <input type="text" id="CadastroMunicipal" name="CadastroMunicipal" value="" class="form-control" placeholder="Cad.Municipal" />
                            </div>
                            <div class="col-6 col-sm-6 col-xl-6 col-md-6 col-lg-6">
                                <label id="labelContato" for="Contato" class="col-form-label">Contato</label>
                                <input type="text" id="Contato" name="Contato" value="" class="form-control" placeholder="Contato" />
                            </div>
                            <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelTelefone" for="TelefoneId" class="col-form-label">Telefone</label>
                                <input type="text" id="Telefone" name="Telefone" value="" class="form-control" placeholder="Telefone" />
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="endereco" role="tabpanel" aria-labelledby="endereco-tab">
                        <div class="row">
                            <div class="col-7 col-sm-7 col-xl-7 col-md-7 col-lg-7">
                                <label id="labelEndereco" for="Endereco" class="col-form-label">Endereço</label>
                                <input type="text" id="Endereco" name="Endereco" value="" class="form-control" placeholder="Nome" />
                            </div>
                            <div class="col-2 col-sm-2 col-xl-2 col-md-2 col-lg-2">
                                <label id="labelNumero" for="Numero" class="col-form-label">Número</label>
                                <input type="text" id="Numero" name="Numero" value="" maxlength="5" class="form-control" />
                            </div>
                            <div class="col-3 col-sm-3 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelComplemento" for="Complemento" class="col-form-label">Complemento</label>
                                <input type="text" id="Complemento" name="Complemento" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 col-sm-3 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelBairro" for="Bairro" class="col-form-label">Bairro</label>
                                <input type="text" id="Bairro" name="Bairro" value="" maxlength="50" class="form-control" placeholder="Nome" />
                            </div>
                            <div class="col-2 col-sm-2 col-xl-2 col-md-2 col-lg-2">
                                <label id="labelCEP" for="Cep" class="col-form-label">C.E.P.</label>
                                <input type="text" id="Cep" name="Cep" value="" maxlength="10" class="form-control" />
                            </div>
                            <div class="col-3 col-sm-3 col-xl-3 col-md-3 col-lg-3">
                                <label id="labelEstado" for="EstadoId" class="col-form-label">Estado</label>
                                <select id="EstadoId" name="EstadoId" asp-items="estadoLista" class="selectpicker show-tick form-control" data-width="100%" data-header="Escolha" data-done-button="true" data-live-search="true">
                                    <option value="0">Selecione</option>
                                </select>
                            </div>
                            <div class="col-4 col-sm-4 col-xl-4 col-md-4 col-lg-4">
                                <label id="labelCidade" for="CidadeId" class="col-form-label">Cidade</label>
                                <select id="CidadeId" name="CidadeId" class="selectpicker show-tick form-control" data-width="100%" data-header="Escolha" data-done-button="true" data-live-search="true">
                                    <option value="0">Selecione</option>
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="Gravar" name="Gravar">Gravar</button>
            </div>
        </div>
    </div>
</div>

