@using French.Erp.Application.DataObject;
@{
}
<div class="modal fade" tabindex="-1" id="modalEdicao">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header bg-black opacity-75 text-white">
                <h5 class="modal-title">Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6 col-sm-6 col-xl-6 col-md-6 col-lg-6">
                        <label id="labelLogin" for="Login" class="col-form-label">Login</label>
                        <input type="hidden" id="UsuarioId" name="UsuarioId" value="" />
                        <input type="text" id="Login" name="Login" value="" class="form-control" placeholder="Login" />
                    </div>
                    <div class="col-6 col-sm-6 col-xl-6 col-md-6 col-lg-6">
                        <label id="labelAdmin" for="Admin" class="col-form-label">Admin?</label>
                        <input type="checkbox" id="Admin" name="Admin" value="" class="form-check" placeholder="Admin" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-xl-12 col-md-12 col-lg-12">
                        <label id="labelNome" for="Nome" class="col-form-label">Nome</label>
                        <input type="text" id="Nome" name="Nome" value="" class="form-control" placeholder="Nome" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-xl-12 col-md-12 col-lg-12">
                        <label id="labelEmail" for="Email" class="col-form-label">Email</label>
                        <input type="text" id="Email" name="Email" value="" class="form-control" placeholder="Nome" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-sm-6 col-xl-6 col-md-6 col-lg-6">
                        <label id="labelCelular" for="Celular" class="col-form-label">Celular</label>
                        <input type="text" id="Celular" name="Celular" value="" class="form-control" placeholder="Celular" />
                    </div>
                    <div class="col-6 col-sm-6 col-xl-6 col-md-6 col-lg-6">
                        <label id="labelDocumento" for="Documento" class="col-form-label">Documento</label>
                        <input type="text" id="Documento" name="Documento" value="" class="form-control" placeholder="Documento" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-outline-primary" id="Gravar" name="Gravar">Gravar</button>
            </div>
        </div>
    </div>
</div>

