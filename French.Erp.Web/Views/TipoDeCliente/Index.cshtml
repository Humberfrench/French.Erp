@using French.Erp.Application.DataObject;
    using French.Erp.Application.DataObject;
@model ModelBasic<TipoDeClienteDto>
@{
    ViewData["Title"] = "Tipo de Cliente";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    ViewData["User"] = Model.Nome;
    ViewData["Admin"] = Model.Admin;
    ViewData["Role"] = Model.Role;
}
<div class="text-center">
    <h3 class="display-4">Tipo de Cliente</h3>
</div>
<div class="text-right">
    <button type="button" class="btn btn-success" onclick="TipoDeCliente.Novo();"><i class="fa fa-file"></i>&nbsp;Novo</button>
</div>
<br />
<div class="table-responsive" style="overflow: visible;">
    <table class="table table-striped table-hover table-sm dataTable" data-item-reload="true" id="tableDados">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="width:10%">#</th>
                <th scope="col" style="width:70%">Descrição</th>
                <th scope="col" class="text-right" style="width:20%">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Lista)
            {
                <tr>
                    <th scope="row">@item.TipoDeClienteId</th>
                    <td>@item.Descricao</td>
                    <td class="text-right">
                        <button type="button" class="btn btn-success" onclick="TipoDeCliente.Edit('@item.TipoDeClienteId', '@item.Descricao')"><i class="fa fa-pencil"></i></button>
                        <button type="button" class="btn btn-danger" onclick="TipoDeCliente.Excluir('@item.TipoDeClienteId')"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<partial name="Edit" />

@section scripts
{
    <script src="~/Views/TipoDeCliente/main.js" defer></script>
}
