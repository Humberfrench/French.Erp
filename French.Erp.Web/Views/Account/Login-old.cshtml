@model ModelBasic<Login>
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    var modelData = Model.ViewModel;
}

<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked="checked"><label for="tab-1" class="tab">Acesso</label>
        <input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab">Senha?</label>
        <div class="login-form">
            <div class="sign-in-htm">
                <form asp-controller="Account" asp-action="Login" method="post" id="formLogin">
                    <div class="group">
                        <label for="Usuario" class="label">Usuário</label>
                        <input id="Usuario" name="Usuario" type="text" class="input" value="@modelData.Usuario" required="required">
                    </div>
                    <div class="group">
                        <label for="Senha" class="label">Senha</label>
                        <input id="Senha" name="Senha" type="password" class="input" data-type="password" required="required">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Sign In">
                    </div>
                    <div class="hr"></div>
                </form>
            </div>
            <div class="for-pwd-htm">
                <form asp-controller="Account" asp-action="RecuperarSenha" method="post" id="formRecuperarSenha">
                    <div class="group">
                        <label for="UsuarioReset" class="label">Usuário</label>
                        <input id="UsuarioReset" name="UsuarioReset" type="text" class="input" value="@modelData.UsuarioReset" required="required">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Reiniciar Senha">
                    </div>
                    <div class="hr"></div>
                </form>
            </div>
        </div>
    </div>
</div>
