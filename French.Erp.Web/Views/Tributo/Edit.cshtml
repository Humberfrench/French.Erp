<div class="modal fade" tabindex="-1" id="modalEdicao">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tributo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-8 col-sm-8 col-xl-8 col-md-8 col-lg-8">
                        <label id="labelDescricao" for="Descricao" class="col-form-label">Descrição</label>
                        <input type="hidden" id="TributoId" name="TributoId" value="" />
                        <input type="text" id="Descricao" name="Descricao" value="" class="form-control" placeholder="Descricao" />
                    </div>
                    <div class="col-4 col-sm-4 col-xl-4 col-md-4 col-lg-4">
                        <label id="labelRetemNaNota" for="RetemNaNota" class="col-form-label">Retem Na Nota?</label><br/>
                        <input type="checkbox" id="RetemNaNota" name="RetemNaNota" value="" class="form-check-input" />
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                        <label id="labelPercentual" for="Percentual" class="col-form-label">Percentual de Imposto</label>
                        <input type="text" id="Percentual" name="Percentual" value="" class="form-control" placeholder="0,00" />
                    </div>
                    <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                        <label id="labelValorDeducao" for="ValorDeducao" class="col-form-label">Valor da Dedução</label>
                        <input type="text" id="ValorDeducao" name="ValorDeducao" value="" class="form-control" placeholder="0,00" />
                    </div>
                    <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                        <label id="labelFaixaInicial" for="FaixaInicial" class="col-form-label">Faixa Inicial</label>
                        <input type="text" id="FaixaInicial" name="FaixaInicial" value="" class="form-control" placeholder="0,00" />
                    </div>
                    <div class="col-6 col-sm-6 col-xl-3 col-md-3 col-lg-3">
                        <label id="labelFaixaFinal" for="FaixaFinal" class="col-form-label">Faixa Final</label>
                        <input type="text" id="FaixaFinal" name="FaixaFinal" value="" class="form-control" placeholder="0,00" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="Gravar" name="Gravar">Gravar</button>
            </div>
        </div>
    </div>
</div>

