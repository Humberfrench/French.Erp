@using French.Erp.Application.DataObject;
@using Dietcode.Core.Lib;
@model ModelBasic<TarefaDto, TarefaItemDto>
@{
    IEnumerable<SelectListItem> cliente = Model.Seletores.Seletor1 as IEnumerable<SelectListItem>;
    ViewData["User"] = Model.Nome;
    ViewData["Role"] = Model.Role;
    ViewData["Admin"] = Model.Admin;

    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var numeroNota = $"{Model.Valor1 ?? 0}";
    var itens = $"{Model.ViewModel.TarefaItem.Count()}" ?? "0";
    var total = 0m;
    var horas = 0m;
}

@if (!Model.IsValid)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-danger" role="alert">
                @Model.Erro !
            </div>
        </div>
    </div>
}
<form asp-controller="Tarefa" asp-action="Edit" method="post" id="formTarefa">
    <h5 class="modal-title">Tarefa / Orçamento</h5>
    <div class="row mb-3">
        <div class="col-12 col-xxl-4">
            <div class="form-floating">
                <input type="hidden" asp-for="ViewModel.TarefaId" />
                <input type="hidden" asp-for="ViewModel.ClienteId" id="ClienteId" />
                <select id="Cliente" name="Cliente" asp-items="cliente" class="form-select form-select-lg" data-width="100%" data-header="Escolha" data-done-button="true" data-live-search="true">
                    <option value="0">Selecione</option>
                </select>
                <label id="labelCliente" for="Cliente">Cliente</label>
            </div>
        </div>
        <div class="col-6 col-xxl-4">
            <div class="form-floating">
                <input type="text" asp-for="ViewModel.Nome" id="Nome" class="form-control form-control-lg" placeholder="Nome" required="required" />
                <label id="labelDescricao" for="Nome">Nome/Serviço</label>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="form-floating">
                <input type="date" asp-for="ViewModel.DataInicio" id="DataInicio" asp-format="{0:dd/MM/yyyy}" class="form-control form-control-lg" placeholder="00/00/0000" />
                <label id="labelInscricaoEstadual" for="DataInicio">Início</label>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="form-floating">
                <input type="date" asp-for="ViewModel.DataFim" id="DataFim" asp-format="{0:dd/MM/yyyy}" class="form-control form-control-lg" placeholder="00/00/0000" />
                <label id="labelDataFim" for="DataFim">Fim</label>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6 col-xxl-1">
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-qrcode"></i></span>
                <div class="form-floating">
                    <input type="text" id="NumeroNota" name="NumeroNota" value="@numeroNota" class="form-control form-control-lg" disabled="disabled" placeholder=" " />
                    <input type="hidden" asp-for="ViewModel.NotaFiscalId" />
                    <label id="labelNumeroNota" for="NumeroNota">N.F.</label>
                </div>
            </div>
        </div>
        <div class="col-6 col-xxl-1">
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-tasks"></i></span>
                <div class="form-floating">
                    <input type="text" id="Itens" name="Itens" value="@itens" class="form-control form-control-lg" disabled="disabled" placeholder=" " />
                    <label id="labelInscricaoEstadual" for="Itens">Itens</label>
                </div>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.ValorHora" id="ValorHora" class="form-control form-control-lg" placeholder=" " />
                    <label id="labelValorHora" for="ValorHora">Valor Hora</label>
                </div>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.ValorHora" id="ValorHora" class="form-control form-control-lg" placeholder=" " />
                    <label id="labelValorHora" for="ValorHora">Valor Hora</label>
                </div>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.ValorOrcado" id="ValorOrcado" class="form-control form-control-lg" placeholder="0,00" onkeydown="return Util.onlyValues(event)" />
                    <label id="labelValorOrcado" for="ValorOrcado">Valor Orçado</label>
                </div>
                <span class="input-group-text" onclick="Tarefa.CalcularValorOrcado()"><i class="fa fa-calculator"></i></span>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.ValorDesconto" id="ValorDesconto" class="form-control form-control-lg" placeholder="0,00" onkeydown="return Util.onlyValues(event)" />
                    <label for="ValorOrcado">Valor Desconto</label>
                </div>
            </div>
        </div>
        <div class="col-6 col-xxl-2">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.Comissao" id="Comissao" class="form-control form-control-lg" placeholder="0,00" onkeydown="return Util.onlyValues(event)" />
                    <label for="Comissao">Comissão</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6 col-xxl-3">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.ValorBruto" id="ValorBruto" class="form-control form-control-lg" placeholder="0,00" onkeydown="return Util.onlyValues(event)" />
                    <label for="ValorBruto">Valor Bruto</label>
                </div>
            </div>
        </div>
        <div class="col-6 col-xxl-3">
            <div class="input-group">
                <span class="input-group-text">R$</span>
                <div class="form-floating">
                    <input type="text" asp-for="ViewModel.ValorCobrado" id="ValorCobrado" class="form-control form-control-lg" placeholder="0,00" onkeydown="return Util.onlyValues(event)" />
                    <label for="ValorCobrado">Valor Cobrado</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <div class="form-floating">
                <input type="text" asp-for="ViewModel.Observacao" id="Observacao" class="form-control form-control-lg" placeholder="" maxlength="250" />
                <label id="labelObservacao" for="Observacao">Observação</label>
            </div>
        </div>
    </div>
    <br />
    <div class="row mb-3">
        <div class="col-10">
        </div>
        <div class="col-1 col-xxl-1">
            <button type="button" class="btn btn-secondary" onclick="Tarefa.Voltar()">Voltar</button>
        </div>
        <div class="col-1 col-xxl-1">
            <button type="button" class="btn btn-primary" onclick="Tarefa.Gravar()">Gravar</button>
        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col-12">
        <div class="table-responsive" style="overflow: visible;">
            <table class="table table-striped table-hover table-sm dataTable" data-item-reload="true" id="tableDados">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="width:3%">Ordem</th>
                        <th scope="col" style="width:40%">Descrição</th>
                        <th scope="col" style="width:17%">Serviço</th>
                        <th scope="col" style="width:8%">Data</th>
                        <th scope="col" style="width:8%">Hrs.Orç.</th>
                        <th scope="col" style="width:8%">Hrs.Gasta</th>
                        <th scope="col" style="width:8%">Vlr.Hora</th>
                        <th scope="col" style="width:8%">Vlr.Item</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Lista)
                    {
                        total += item.ValorItem;
                        horas += item.HorasGastas;
                        <tr>
                            <td>@item.Ordem</td>
                            <td>@item.Descricao</td>
                            <td>@item.Servico.Nome</td>
                            <td>@item.Data.ToDateFormated()</td>
                            <td>@item.HorasOrcadas</td>
                            <td>@item.HorasGastas</td>
                            <td>@item.ValorHora.ToMoeda()</td>
                            <td>@item.ValorItem.ToMoeda()</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4">&nbsp;</td>
                        <td colspan="2"><b>Horas</b>&nbsp;@horas.ToMoeda()</td>
                        <td colspan="2" class="text-right"><b>Total</b>&nbsp;@total.ToMoeda()</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Views/Tarefa/new.js" defer></script>
    <script src="~/js/util.js"></script>
}
