@using French.Erp.Application.DataObject;
@model ModelBasic<LeadDto>
@{
    ViewData["Title"] = "Cliente";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    ViewData["User"] = Model.Nome;
    ViewData["Admin"] = Model.Admin;
    ViewData["Role"] = Model.Role;


}
<div class="text-center">
    <h3 class="display-4">Leads</h3>
</div>
<div class="text-end">
    <button type="button" class="btn btn-outline-success" onclick="Leads.Novo();"><i class="fa fa-file"></i>&nbsp;Novo Lead</button>
</div>
<br />
<div class="table-responsive" style="overflow: visible;">
    <table class="table table-striped table-hover table-responsive-xxl dataTable" data-item-reload="true" id="tableDados">
        <thead>
            <tr class="table-dark">
                <th scope="col" style="width:24%">Descrição</th>
                <th scope="col" style="width:24%">Empresa</th>
                <th scope="col" style="width:24%">Contato</th>
                <th scope="col" style="width:5%">&nbsp;</th>
                <th scope="col" style="width:12%">Tipo</th>
                <th scope="col" style="width:6%">Efetv.?</th>
                <th scope="col" class="text-right" style="width:5%">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Lista)
            {
                <tr>
                    <td>
                        <b><i class="fa fa-user"></i>&nbsp;Nome: </b>@item.Descricao
                    </td>
                    <td>
                        <b><i class="fa fa-user"></i>&nbsp;Nome: </b>@item.Empresa
                    </td>
                    <td>
                        <b><i class="fa fa-user"></i>&nbsp;Nome: </b>@item.Contato
                    </td>
                    <td>
                        <div class="btn-group dropend">
                            <button type="button" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-address-card"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="mailto: @item.Email">
                                        <i class="fa fa-mail-bulk"></i>&nbsp;@item.Email
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fa fa-phone"></i>&nbsp;@item.Telefone
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                    <td>
                        <b>Criado: </b><i class="fa fa-calendar"></i>&nbsp;@item.DataDeCriacao.ToShortDateString()
                    </td>
                    <td>
                        @if (item.Efetivada)
                        {
                            <button type="button" class="btn btn-outline-success">
                                <i class="fa fa-circle-check"></i>
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-danger">
                                <i class="fa fa-circle-xmark"></i>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>